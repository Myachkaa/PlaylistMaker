<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle24Bold">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="TextStyle22">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextStyle19">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextStyle18">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextStyle16">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextStyle16Medium">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TextStyle14">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextStyle14Regular">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TextStyle13Gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextStyle13Black">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextStyle12">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TextStyle11">
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16</item>
        <item name="android:layout_marginVertical">@dimen/padding_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetTop">@dimen/padding_0</item>
        <item name="android:insetBottom">@dimen/padding_0</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/padding_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_8</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ImageLocationSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/padding_12</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="TextLocationSetting" parent="TextStyle16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/padding_16</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">@dimen/padding_48</item>
        <item name="android:layout_height">@dimen/padding_48</item>
        <item name="android:layout_marginStart">@dimen/padding_4</item>
        <item name="android:layout_marginTop">@dimen/padding_4</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="HeadingStyle" parent="TextStyle22">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/padding_48</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:layout_marginStart">@dimen/padding_4</item>
        <item name="android:layout_marginTop">@dimen/padding_4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlaceholderStyle" parent="TextStyle19">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/padding_108</item>
        <item name="android:drawablePadding">@dimen/padding_16</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="FunctionalButton" parent="TextStyle14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="cornerRadius">@dimen/padding_54</item>
    </style>

    <style name="CreatePlaylistEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">@color/hint_color_selector</item>
        <item name="boxStrokeWidth">@dimen/padding_1</item>
        <item name="boxStrokeWidthFocused">@dimen/padding_1</item>
        <item name="boxBackgroundColor">?attr/colorSecondary</item>
        <item name="hintTextColor">@color/box_stroke_color_selector</item>
        <item name="boxStrokeColor">@color/box_stroke_color_selector</item>
    </style>

</resources>